{% extends 'base.html.twig' %}

{% block body %}

<div class="row">

    

        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 ">

            <article role="pge-title-content" class="contact-header">

                <header>

                    <h2><span>Get in touch</span> We'd love to hear from you.</h2>

                </header>

                <p><a href="mailto:{{ parameters.text }}"><i class="fa fa-envelope" aria-hidden="true"></i> {{ parameters.text }}</a></p>

            </article>

        </div>

        <!-- map -->

        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">

                <div class="demo-wrapper">

                    <div id="surabaya"></div>

                </div>

        </div>

        <!-- map -->

        <div class="clearfix"></div>

        

       <!-- contat-from-wrapper -->
       {{ form_start(form) }}
       <div class="contat-from-wrapper">

                 <div id="message"></div>

                        <form method="post" action="php/contactfrom.php" name="cform" id="cform">

                    <div class="row">

                        <div class="col-md-6 col-lg-6 col-sm-6 col-xs-12">

                        {{ form_row(form.name, {'attr': {'placeholder': 'Whats your name *'}}) }}

                        </div>

                        <div class="col-md-6 col-lg-6 col-sm-6 col-xs-12">

                        {{ form_row(form.email, {'attr': {'placeholder': 'Whats your email *'}}) }}

                        </div>

                    </div>

                    <div class="clearfix"></div>

                    {{ form_row(form.text, {'attr': {'placeholder': 'Whats in your mind *'}}) }}

                    <div class="clearfix"></div>

                    <input name="" type="submit" value="Send email">

                    <div id="simple-msg"></div>

                </form>

       </div>
       {{ form_end(form) }}
       <!-- contat-from-wrapper -->  

    </div>

{% endblock %}
