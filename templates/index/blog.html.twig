{% extends 'base.html.twig' %}

{% block body %}

<div class="row">

        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 ">

            <article role="pge-title-content" class="blog-header">

                <header>

                    <h2><span>Blog</span> Find below some articles. </h2>

                </header>

                <!-- <p>I hope you will find some interestings things.</p> -->

            </article>

            <ul class="grid-lod effect-2" id="grid">

                {% set i = 0 %}
                {% for blog in blogs %}
                {% if i < blogs|length / 2 %}

                <li>

                    <section class="blog-content">

                        <a href="{{ path('blog_details', {'id': blog.id}) }}">

                        <figure>

                            <div class="post-date">

                                <span>{{ blog.date|date("d", "Europe/Paris") }}</span> {{ blog.date|date("m Y", "Europe/Paris") }}

                            </div>

                            <img src="{{ asset('assets/uploads/' ~ blog.data.name) }}" alt="{{ blog.title }}" class="img-responsive"/>

                        </figure>

                        </a>

                        <article>

                            {{ blog.title }}

                        </article>

                    </section>

                </li>

                {% endif %}

                {% set i = i + 1 %}

                {% endfor %}

            </ul>

        </div>

        

